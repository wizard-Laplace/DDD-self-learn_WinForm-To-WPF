<UserControl x:Class="DDD.WPF.Views.WeatherSaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="300"
             Width="500">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="地域"
                       FontSize="20"
                       Width="200"/>
                <ComboBox ItemsSource="{Binding Areas}"
                          SelectedValuePath="AreaId"
                          DisplayMemberPath="AreaName"
                          SelectedItem="{Binding SelectedArea}"
                          FontSize="20"
                          Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="日時"
                       FontSize="20"
                       Width="200"/>
                <DatePicker SelectedDate="{Binding DataDateValue}"
                            FontSize="20"
                            Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="状態"
                       FontSize="20"
                       Width="200"/>
                <ComboBox ItemsSource="{Binding Conditions}"
                          SelectedValuePath="Value"
                          DisplayMemberPath="DisplayValue"
                          SelectedItem="{Binding SelectedCondition}"
                          FontSize="20"
                          Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="温度"
                       FontSize="20"
                       Width="200"/>
                <TextBox Text="{Binding TemperatureText}"
                         FontSize="20"
                         Width="200"/>
                <Label Content="{Binding TemperatureUnitName}"
                       FontSize="20"
                       Width="50"/>
            </StackPanel>
            <Button Content="登録"
                    Height="30"
                    FontSize="20"
                    Margin="10"
                    Command="{Binding SaveButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
